{
  "include": ["src/*.ts"],
  "compilerOptions": {
    "target": "ESNEXT",       
    "module": "commonjs",
    "lib": ["ESNext"],
    "declaration": true,
    "outDir": "dist",                      
    "strict": true,                          
    "moduleResolution": "node",
    "types": ["vite/client", "node"],           
    "esModuleInterop": true,                 
    "skipLibCheck": true
  }
  
}

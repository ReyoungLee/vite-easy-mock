{
  "include": ["src/*.ts"],
  "compilerOptions": {
    "target": "ESNEXT",       
    "module": "commonjs",  
    "declaration": true,                 
    "outDir": "lib",                      
    "strict": true,                          
    "moduleResolution": "node",           
    "esModuleInterop": true,                 
    "skipLibCheck": true
  }
}
